.web_cell {
  border-bottom: 1px solid #ddd;
}

.web_input {
  padding: 10px 15px;
  width: 100%;
  border: 0;
  outline: 0;
  -webkit-appearance: none;
  font-size: inherit;
  color: inherit;
  background-color: #fff;
}

.input-wrap {
  background: #fff;
  border-bottom: 1px solid #eee;
  margin: 0 -12px;
  padding: 0 12px;
  height: 46px;
  line-height: 46px;
}

.label {
  color: #999;
  width: 4.5em;
}

.account-info-input {
  font-size: 18px;
  line-height: 100%;
  height: 100%;
  width: 100%;
}

.avatar {
  box-sizing: border-box;
  vertical-align: middle;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 5px solid rgba(255, 255, 255, 0.8);
  text-align: center;
}
